begin
  require 'jeweler'
  Jeweler::Tasks.new do |gem|
    gem.name = "rails-forms-generator"
    gem.summary = %Q{Define your form layouts in YAML and output to Form DSL of choice}
    gem.description = %Q{Lets you define your form layouts in YAML and then generate to the form DSL of your choice. 
      This should make it easy to switch between form DSLs if needed and also let's non-programmers edit the forms easily!}
    gem.email = "kmandrup@gmail.com"
    gem.homepage = "http://github.com/kristianmandrup/rails-forms-generator"
    gem.authors = ["Kristian Mandrup"]
    gem.add_development_dependency "rspec", ">= 2.0.0.beta.19"
    gem.add_development_dependency "forms-spec"
    # gem is a Gem::Specification... see http://www.rubygems.org/read/chapter/20 for additional settings
  end
  Jeweler::GemcutterTasks.new
rescue LoadError
  puts "Jeweler (or a dependency) not available. Install it with: gem install jeweler"
end

